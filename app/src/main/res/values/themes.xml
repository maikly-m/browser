<resources xmlns:tools="http://schemas.android.com/tools" >
    <!-- Base application theme. -->
    <style name="Theme.PathSelector" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <!-- Primary brand color. -->
        <item name="colorPrimary" >@color/purple_500</item >
        <item name="colorPrimaryVariant" >@color/purple_700</item >
        <item name="colorOnPrimary" >@color/white</item >
        <!-- Secondary brand color. -->
        <item name="colorSecondary" >@color/teal_200</item >
        <item name="colorSecondaryVariant" >@color/teal_700</item >
        <item name="colorOnSecondary" >@color/black</item >
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item >
        <!-- Customize your theme here. -->
    </style >

    <style name="Theme.PathSelector.NoActionBar" >
        <item name="windowActionBar" >false</item >
        <item name="windowNoTitle" >true</item >
    </style >

    <style name="Theme.PathSelector.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PathSelector.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.PathSelector.NoActionBar.NoActionBar" >
        <item name="windowActionBar" >false</item >
        <item name="windowNoTitle" >true</item >
    </style >

    <style name="Theme.PathSelector.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PathSelector.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources >