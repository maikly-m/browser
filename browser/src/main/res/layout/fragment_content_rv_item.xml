<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data >

    </data >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_content_rv_item_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ripple_white_blank_10" >

        <CheckBox
            android:id="@+id/fragment_content_rv_item_cb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/fragment_content_rv_item_type"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragment_content_rv_item_cb"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_browser_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_content_rv_item_path"
            app:layout_constraintStart_toEndOf="@+id/fragment_content_rv_item_type"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"
            tools:text="sdcard"
            android:textSize="18sp"
            android:gravity="center"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fragment_content_rv_item_modified_time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragment_content_rv_item_type"
            app:layout_constraintTop_toBottomOf="@+id/fragment_content_rv_item_path"
            android:layout_marginTop="5dp"
            android:textColor="@color/black_80"
            tools:text="2020-01-01 01:00"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fragment_content_rv_item_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragment_content_rv_item_modified_time"
            app:layout_constraintTop_toBottomOf="@+id/fragment_content_rv_item_path"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black_80"
            tools:text="1m"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_content_rv_item_count"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black_80"
            tools:text="2é¡¹"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout >
</layout >