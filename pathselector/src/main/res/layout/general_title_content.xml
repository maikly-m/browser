<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/general_title_content_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="18dp"
        android:text="@string/test_text"
        android:gravity="center"
        android:textSize="20sp" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/general_title_content_tv_title">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey300" />

        <TextView
            android:id="@+id/general_title_content_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="18dp"
            android:paddingHorizontal="30dp"
            android:text="@string/test_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey300" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/general_title_content_tv_content">

            <TextView
                android:id="@+id/general_title_content_tv_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="15dp"
                android:text="@string/test_text"
                android:gravity="center"
                android:background="@drawable/style_click_r_rectangle_white_gray" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/grey300" />

            <TextView
                android:id="@+id/general_title_content_tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="15dp"
                android:text="@string/test_text"
                android:gravity="center"
                android:background="@drawable/style_click_r_rectangle_white_gray" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>




